generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String

  workspaces Workspace[]
}

model Workspace {
  id String @id @default(uuid())
  members User[]
  apis Endpoint[]
}

model Endpoint {
  id String @id @default(uuid())
  httpMethod String

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
}
